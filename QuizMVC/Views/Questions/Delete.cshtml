@model Question

@{
    ViewData["Title"] = "Delete Question";
}

<h1>Delete Question</h1>
<hr />
<h3>Are you sure you want to delete this question?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Quiz ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuizId)
        </dd>
        <dt class="col-sm-2">
            Quiz Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuizName)
        </dd>
        <dt class = "col-sm-2">
            Question Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionCategory)
        </dd>
        <dt class = "col-sm-2">
            Question
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class="col-sm-2">
            Possible answers
        </dt>
        <dd class="col-sm-10">
            <table class="table-quest-details">
                <tr>
                    <th class="table-quest-details-id"></th>
                    <th class="table-quest-details-ans">Answer</th>
                    <th class="table-quest-details-correct">Correct</th>
                </tr>
                <tr>
                    <td class="table-quest-details-id">A</td>
                    <td>@Html.DisplayFor(model => model.A_Answer)</td>
                    <td class="table-quest-details-correct">@Html.DisplayFor(model => model.A_Correct)</td>
                </tr>
                <tr>
                    <td class="table-quest-details-id">B</td>
                    <td>@Html.DisplayFor(model => model.B_Answer)</td>
                    <td class="table-quest-details-correct">@Html.DisplayFor(model => model.B_Correct)</td>
                </tr>
                <tr>
                    <td class="table-quest-details-id">C</td>
                    <td>@Html.DisplayFor(model => model.C_Answer)</td>
                    <td class="table-quest-details-correct">@Html.DisplayFor(model => model.C_Correct)</td>
                </tr>
                <tr>
                    <td class="table-quest-details-id">D</td>
                    <td>@Html.DisplayFor(model => model.D_Answer)</td>
                    <td class="table-quest-details-correct">@Html.DisplayFor(model => model.D_Correct)</td>
                </tr>
            </table>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
